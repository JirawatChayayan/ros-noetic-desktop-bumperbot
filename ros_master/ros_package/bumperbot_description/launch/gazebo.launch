<launch>
    <arg name="robot_xacro" default="$(find bumperbot_description)/urdf/bumperbot_description.urdf.xacro"/>
    <arg name="world" default="empty_world"/>


    <!-- CONVERT XACRO TO URDF AND READ TO PARAM -->
    <param name="robot_description" command="$(find xacro)/xacro $(arg robot_xacro)"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
        <arg name="world_name" value="$(arg world)"/>
    </include>

    <node pkg="gazebo_ros" 
          type="spawn_model" 
          name="spawn_model" 
          args="-urdf 
                -model bumperbot 
                -param robot_description 
                -x 0.0
                -y 0.0
                -z 0.0
                -R 0.0
                -P 0.0
                -Y 0.0" 
          output="screen" 
          respawn="false"/>

     <!-- args="-unpause -urdf -model robot -param robot_description"  -->
</launch>